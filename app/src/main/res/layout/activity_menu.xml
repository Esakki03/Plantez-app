<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="51dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="93dp"
                android:layout_height="106dp"
                android:src="@drawable/logo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Plantez"
                android:textColor="#000000"
                android:textSize="36sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="51dp"
            android:weightSum="2"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/logo">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mbutton1"
                android:layout_width="131dp"
                android:layout_height="35dp"
                android:background="@drawable/button"
                android:text="Home"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginLeft="31dp"
                android:layout_marginRight="100dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mbutton2"
                android:layout_width="131dp"
                android:layout_height="35dp"
                android:background="@drawable/button"
                android:text="Profile"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginRight="31dp"

                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="51dp"
            android:weightSum="2"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/b">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mbutton3"
                android:layout_width="131dp"
                android:layout_height="35dp"
                android:background="@drawable/button"
                android:text="Aboutus"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginLeft="31dp"
                android:layout_marginRight="100dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mbutton4"
                android:layout_width="131dp"
                android:layout_height="35dp"
                android:background="@drawable/button"
                android:text="contactus"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginRight="31dp"

                />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b3"
            android:layout_width="187dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/b2" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/plant"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="43dp"
            android:weightSum="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/b3">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="188dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/identify"
                        android:layout_width="176dp"
                        android:layout_height="128dp"
                        android:src="@drawable/identify1"
                        android:scaleType="centerCrop"/>
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Identify Plant"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"/>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="188dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/species"
                        android:layout_width="176dp"
                        android:layout_height="128dp"
                        android:src="@drawable/species"
                        android:scaleType="centerCrop"/>
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Species"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"/>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/plant2"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="25dp"
            android:weightSum="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plant">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="188dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="176dp"
                        android:id="@+id/growplant"
                        android:layout_height="128dp"
                        android:src="@drawable/grow"
                        android:scaleType="centerCrop"/>
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Grow Plant"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"/>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="188dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/article"
                        android:layout_width="176dp"
                        android:layout_height="128dp"
                        android:src="@drawable/arti"
                        android:scaleType="centerCrop"/>
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Article"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>